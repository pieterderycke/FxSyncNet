<Page
    x:Class="FxSyncNet.PhoneDemoClient.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FxSyncNet.PhoneDemoClient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Email:" VerticalAlignment="Top" Style="{StaticResource BodyTextBlockStyle}"/>
        <TextBox x:Name="emailTextBox" Margin="10,39,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,82,0,0" TextWrapping="Wrap" Text="Password:" VerticalAlignment="Top" Style="{StaticResource BodyTextBlockStyle}"/>
        <PasswordBox x:Name="passwordTextBox" Margin="10,106,10,0" VerticalAlignment="Top"/>
        <Button x:Name="loginButton" Content="Login" HorizontalAlignment="Stretch" Margin="10,156,10,0" VerticalAlignment="Top" Click="loginButton_Click"/>
    </Grid>
</Page>
